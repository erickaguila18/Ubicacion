doctype
html(lang='es')
	head
		title='Home'
		link(href="../css/bootstrap.min.css" rel="stylesheet")
		link(href="../css/estilo.css" rel="stylesheet")
		script(src="../js/jquery-1.11.2.min.js")
		script(src="../js/bootstrap.min.js")
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(charset='utf-8')
		script(src="/socket.io/socket.io.js")
		script(src="../js/chat.js")
		link(href='http://fonts.googleapis.com/css?family=Roboto&subset=cyrillic-ext,latin,latin-ext' rel='stylesheet' type='text/css')

	body(style="font-family: 'Roboto', sans-serif;")
		nav(class="navbar navbar-inverse")
				div(class="container-fluid")
					div(class="navbar-header")
						button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#hid")
							span(class="icon-bar")
							span(class="icon-bar")
							span(class="icon-bar")
						img(class="img-responsive"  href="#" src="../img/logotipo.png")
					div(class="collapse navbar-collapse" id="hid")
						ul(class="nav navbar-nav")
							li: a(href="/signout") Salir 
						
		div(class="container")
			
			hr(style="border-width: 2px;")
			#user
				h4
					div(class="alert alert-warning alert-dismissible" role="alert")
						button(type="button" class="close" data-dismiss="alert" aria-label="Close")
							span(aria-hidden="true")&times; 
						strong Logueado como: #{user.username}

				div(class="pull-right" class="panel panel-primary" style="text-align: left;")
					div(class="panel-heading") Usuarios
					div(class="panel-body" id="users" style="overflow-y:auto;")

			
				div(style="text-align: left; max-width:500px; min-width:100px;height:150px;overflow-y:auto;padding:10px;" id="conversation")
				br
				div(style="text-align: left; max-width:500px; min-width:200px;overflow-y:auto;padding:10px;" class="form-inline pull-left")
					div(class="form-group")
						input( class="form-control" id="data" autofocus="autofocus" placeholder="Mensaje")
						button(id="datasend" class="form-control btn btn-success" type="submit") ok
					br
				br

			br
			br
			hr(style="border-width: 2px;")
			br
			form(method="POST", action="/guardar")
				input(id="ubication" type="hidden")
				input(id="user" type="text" value="#{user._id}")
				button(type="submit" class="btn btn-success") Guardar mi ubicaci√≥n
			input(id="nombre" type="hidden" value="#{user.username}")
	footer(class="footer" )